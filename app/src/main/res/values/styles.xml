<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Main theme colors -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <!-- Action Bar -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowBackground">@color/white</item>

        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>

        <item name="android:textColor">@color/text_default</item>
    </style>

    <style name="LinearProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:minHeight">2dp</item>
        <item name="android:maxHeight">2dp</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="AlertDialogTitle">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AlertDialogMessage">
        <item name="android:textColor">@color/text_default</item>
    </style>

    <style name="ActionButton">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
